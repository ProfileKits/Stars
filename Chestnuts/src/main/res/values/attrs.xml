<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="cleanEditText">
        <attr name="icon" format="reference"></attr>
        <attr name="focusIcon" format="reference"></attr>
        <attr name="deleteIcon" format="reference"></attr>
        <attr name="iconWidth" format="dimension"></attr>
        <attr name="iconHeight" format="dimension"></attr>
        <attr name="deleteIconWidth" format="dimension"></attr>
        <attr name="deleteIconHeight" format="dimension"></attr>
        <attr name="dividerColor" format="color"></attr>
        <attr name="dividerBonds" format="dimension"></attr>
        <attr name="focusDividerColor" format="color"></attr>
        <attr name="dividerMarginLeft" format="dimension"></attr>
        <attr name="dividerMarginRight" format="dimension"></attr>
        <attr name="focusTextColor" format="color"></attr>
        <attr name="background" format="reference"></attr>
        <attr name="cursor" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="MySeekBar">
        <!--线条的宽度-->
        <attr name="lineSize" format="integer"/>
        <!--背景线条的颜色-->
        <attr name="lineColorBg" format="color"/>
        <!--进度线条的颜色-->
        <attr name="lineColorProgress" format="color"/>
        <!--进度的样式-->
        <attr name="lineStyle" format="enum">
            <enum name="PROGRESS" value="0"/>
            <enum name="SLIDE" value="1"/>
        </attr>
        <!--当前的进度-->
        <attr name="currentProgress" format="integer"/>
        <!--最大的进度-->
        <attr name="maxProgress" format="integer"/>
    </declare-styleable>



    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension"/>
        <attr name="realtimeDownsampleFactor" format="float"/>
        <attr name="realtimeOverlayColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RoundedRectangleBlurView">
        <attr name="roundedRectangleRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FlikerProgressBar">
        <attr name="loadingColor" format="color"/>
        <attr name="stopColor" format="color"/>
        <attr name="finishColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="borderWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="pickerview">
        <attr name="pickerview_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="pickerview_textSize" format="dimension"/>
        <attr name="pickerview_textColorOut" format="color"/>
        <attr name="pickerview_textColorCenter" format="color"/>
        <attr name="pickerview_dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="font_name" format="string"/>
        <attr name="has_use" format="boolean"/>
        <attr name="has_Relaxation" format="boolean"/>
        <attr name="font_size_before" format="dimension"/>
        <attr name="font_size_after" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="progress_circle">
        <attr name="text_color" format="color"/>
        <attr name="number_text_size" format="dimension"/>
        <attr name="unit_text_size" format="dimension"/>
        <attr name="progress_background_line_width" format="dimension"/>
        <attr name="progress_circle_line_width" format="dimension"/>
        <attr name="progress_background_line_color" format="color"/>
        <attr name="progress_circle_line_color" format="color"/>
        <attr name="unit" format="string"/>
    </declare-styleable>


    <declare-styleable name="verify_EditText">
        <!-- 验证码的个数 -->
        <attr format="integer" name="verify_count"/>
        <!--        TextView 的宽度-->
        <attr format="dimension" name="verify_width"/>
        <!--        TextView 的高度-->
        <attr format="dimension" name="verify_height"/>
        <!--        TextView 的间隔-->
        <attr format="dimension" name="verify_margin"/>
        <!--        TextView 的字体大小-->
        <attr format="dimension" name="verify_textSize"/>
        <!--        TextView 的字体颜色-->
        <attr format="color" name="verify_textColor"/>
        <!-- TextView 无值背景 -->
        <attr format="reference" name="verify_background_normal"/>
        <!-- TextView 有值背景 -->
        <attr format="reference" name="verify_background_selected"/>
        <!--        是否隐藏密码-->
        <attr format="boolean" name="verify_password"/>
        <!--        是否开始显示软键盘-->
        <attr format="boolean" name="verify_keyboard"/>
        <!--        密码显示时间ms-->
        <attr format="integer" name="verify_password_visible_time"/>
        <!--        editText的输入类型 -->
        <attr name="verify_inputType">
            <flag name="none" value="0x00000000"/>
            <flag name="text" value="0x00000001"/>
            <flag name="textCapCharacters" value="0x00001001"/>
            <flag name="textCapWords" value="0x00002001"/>
            <flag name="textCapSentences" value="0x00004001"/>
            <flag name="textAutoCorrect" value="0x00008001"/>
            <flag name="textAutoComplete" value="0x00010001"/>
            <flag name="textMultiLine" value="0x00020001"/>
            <flag name="textImeMultiLine" value="0x00040001"/>
            <flag name="textNoSuggestions" value="0x00080001"/>
            <flag name="textUri" value="0x00000011"/>
            <flag name="textEmailAddress" value="0x00000021"/>
            <flag name="textEmailSubject" value="0x00000031"/>
            <flag name="textShortMessage" value="0x00000041"/>
            <flag name="textLongMessage" value="0x00000051"/>
            <flag name="textPersonName" value="0x00000061"/>
            <flag name="textPostalAddress" value="0x00000071"/>
            <flag name="textPassword" value="0x00000081"/>
            <flag name="textVisiblePassword" value="0x00000091"/>
            <flag name="textWebEditText" value="0x000000a1"/>
            <flag name="textFilter" value="0x000000b1"/>
            <flag name="textPhonetic" value="0x000000c1"/>
            <flag name="textWebEmailAddress" value="0x000000d1"/>
            <flag name="textWebPassword" value="0x000000e1"/>
            <flag name="number" value="0x00000002"/>
            <flag name="numberSigned" value="0x00001002"/>
            <flag name="numberDecimal" value="0x00002002"/>
            <flag name="numberPassword" value="0x00000012"/>
            <flag name="phone" value="0x00000003"/>
            <flag name="datetime" value="0x00000004"/>
            <flag name="date" value="0x00000014"/>
            <flag name="time" value="0x00000024"/>
        </attr>
    </declare-styleable>
</resources>